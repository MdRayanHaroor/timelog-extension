{
  "manifest_version": 3,
  "name": "Developer Time Logger",
  "version": "1.0",
  "description": "Log and track time spent on development tasks",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Developer Time Logger",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
